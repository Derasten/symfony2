{# src/Prueba/InicialBundle/Resources/views/Page/contact.html.twig #}
{% extends 'PruebaInicialBundle::base.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact symblog</h1>
    </header>
    {% if app.session.flashbag.has('blogger-notice') %}
    <div class="blogger-notice">
        
        {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
            {{ flashMessage }}
        {% endfor %}
    </div>
    {% endif %}

    <p>Want to contact symblog?</p>

    <form action="{{ path('PruebaInicialBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.nombre) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}